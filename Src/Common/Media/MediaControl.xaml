<UserControl x:Class="Common.Media.MediaControl"
             xmlns:local="clr-namespace:Common.Media"
             xmlns:mc="clr-namespace:Common.MediaControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:Common.MediaControls">
    <StackPanel Name="MediaControlContainer" Orientation="Horizontal">
        <mc:PlayButton Margin="5" Height="30" Width="30" Command="{Binding Path=PlayCommand}"/>
        <mc:PauseButton Margin="5" Height="30" Width="30" Command="{Binding Path=PauseCommand}"/>
        <mc:RecordButton Margin="5" Height="30" Width="30" Command="{Binding Path=RecordCommand}"/>
        <mc:StopButton Margin="5" Height="30" Width="30" Command="{Binding Path=StopCommand}"/>
    </StackPanel>
</UserControl>
